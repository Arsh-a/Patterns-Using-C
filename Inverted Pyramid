#include <stdio.h>
void invertedPyramid(int n)
{
    for(int i=0;i<n;i++)
    {
        
        for(int k=0;k<i;k++)
        {
            printf(" ");
        }
        for(int j=n-i;j>0;j--)
        {
            printf("* ");
        }
        printf("\n");
    }
}
int main()
{
    invertedPyramid(5);
}
