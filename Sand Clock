#include <stdio.h>
void SandClock(int n)
{
   
    for(int i=0;i<n;i++)
    {
        for(int k=i;k>0;k--)
        {
            printf(" ");
        }
        
        for(int j=n-i;j>0;j--)
        {
            printf(" *");
        }
        printf("\n");
    }
     for(int i=0;i<n;i++)
    {
        
       for(int k=n-i;k>0;k--)
       {
           printf(" ");
       }
       for(int j=0;j<=i;j++)
       {
           printf("* ");
       }
       printf("\n");
    }
}
int main()
{
    SandClock(10);
}
